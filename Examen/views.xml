		</field>
	</record>



    <menuitem
		id="examen"
		name="examen"
		sequence="10"/>

	<menuitem
		id="cerveza"
		name="cerveza"
		action="cerveza_action"
		parent="examen"
		sequence="10"/>
	
	<menuitem
		id="lote_produccion"
		name="lote_produccion"
		action="lote_produccion_action"
		parent="examen"
		sequence="10"/>
	
	<menuitem
		id="ingrediente"
		name="ingrediente"
		action="ingrediente_action"
		parent="examen"
		sequence="10"/>
	
	<menuitem
		id="empaquetado"
		name="empaquetado"
		action="empaquetado_action"
		parent="examen"
		sequence="10"/>
	
	<menuitem
